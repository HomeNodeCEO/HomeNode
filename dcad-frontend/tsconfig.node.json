{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,

    "types": ["node"]
  },
  "include": ["vite.config.ts", "vite.config.*.ts", "vitest.config.ts", "vitest.setup.ts"]
}
